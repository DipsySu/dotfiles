# Example Chezmoi Configuration
# Copy this file to .chezmoi.yaml and customize your values
# This file provides default values without prompts

data:
  # Git Configuration
  name: "Your Name"
  email: "your.email@example.com"
  
  # Development Tools Versions
  versions:
    go: "latest"
    java: "temurin-21"
    node: "lts"
    python: "3.11"
  
  # AWS Configuration
  aws:
    cn_region: "cn-north-1"
    sg_region: "ap-southeast-1"
    codeartifact_domain: "nautilus"
  
  # Home Automation (Tailscale & SSH)
  home:
    tailscale_path: "/mnt/c/Program Files/Tailscale/tailscale.exe"  # WSL path
    # tailscale_path: "/usr/local/bin/tailscale"  # macOS/Linux path
    ssh_host: "home-pc"
    pc_ip: "192.168.50.197"
  
  # Shell Configuration
  shell:
    enable_starship: true
    enable_zoxide: true
    enable_eza: true