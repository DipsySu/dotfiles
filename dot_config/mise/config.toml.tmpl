# PATH = "{{ .chezmoi.homeDir }}/Library/Android/sdk/cmdline-tools/latest/bin:{{ .chezmoi.homeDir }}/Library/Android/sdk/platform-tools:{{ .chezmoi.homeDir }}/Library/Android/sdk/emulator:$PATH"